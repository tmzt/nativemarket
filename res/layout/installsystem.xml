<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  <RelativeLayout
	 android:layout_width="wrap_content"
	 android:layout_height="wrap_content">
	<ImageView
	 android:id="@+id/installsystemicon"
	 android:layout_width="wrap_content"
	 android:layout_height="wrap_content" />
	<TextView
	 android:id="@+id/installsystemtitle"
 	 android:layout_width="wrap_content"
	 android:layout_height="48dip"
	 android:layout_toRightOf="@id/installsystemicon"
	 android:layout_alignParentRight="true"
	 android:textSize="32dip" />
  </RelativeLayout>
  	<ScrollView
  	 android:layout_width="wrap_content"
	 android:layout_height="wrap_content">
	     <TextView
	  	 android:text="@string/ubuntumsg"
	  	 android:padding="10dip"
	 	 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		 android:textSize="12dip" />
	</ScrollView>
	<TextView
		android:id="@+id/installsysteminstructions"
		android:text="@string/installsysteminstructions"
		android:padding="10dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="12dip" />
	<Button
		android:text="@string/installsystemnext"
		android:padding="10dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="12dip" />
</LinearLayout>