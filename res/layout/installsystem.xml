<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  <RelativeLayout
	 android:layout_width="wrap_content"
	 android:layout_height="wrap_content">
	<ImageView
	 android:id="@+id/installsystemicon"
	 android:layout_width="wrap_content"
	 android:layout_height="wrap_content" />
	<TextView
	 android:id="@+id/installsystemtitle"
 	 android:layout_width="wrap_content"
	 android:layout_height="48dip"
	 android:layout_toRightOf="@id/installsystemicon"
	 android:layout_alignParentRight="true"
	 android:textSize="32dip" />
  </RelativeLayout>
  <ViewFlipper
  	 android:id="@+id/installsystemflip"
 	 android:layout_width="wrap_content"
	 android:layout_height="wrap_content">
		<LinearLayout
   		  android:orientation="vertical"
		  android:layout_width="wrap_content"
	      android:layout_height="wrap_content">
		  	<ScrollView
		  	 android:layout_width="wrap_content"
			 android:layout_height="wrap_content">
			     <TextView
			  	 android:text="@string/ubuntumsg"
			  	 android:padding="10dip"
			 	 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:textSize="12dip" />
			</ScrollView>
		</LinearLayout>
		<LinearLayout
		  android:layout_width="wrap_content"
	      android:layout_height="wrap_content">
		  	<ScrollView
		  	 android:layout_width="wrap_content"
			 android:layout_height="wrap_content">
				<TextView
				android:id="@+id/installsysteminstructions"
				android:text="@string/installsysteminstructions"
				android:padding="10dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="12dip" />
			</ScrollView>
		</LinearLayout>
	</ViewFlipper>
	<RelativeLayout
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
				<Button
				android:id="@+id/installsystemprev"
				android:text="@string/installsystemprev"
				android:padding="10dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="12dip" />
				<Button
				android:id="@+id/installsystemnext"
				android:text="@string/installsystemnext"
				android:padding="10dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@id/installsystemprev"
				android:textSize="12dip" />
	</RelativeLayout>
</LinearLayout>